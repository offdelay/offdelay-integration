{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Lint Check",
            "type": "shell",
            "command": "scripts/lint-check",
            "problemMatcher": [
                "$python"
            ]
        },
        {
            "label": "Run Home Assistant (Develop)",
            "type": "shell",
            "command": "source ${workspaceFolder}/.venv/bin/activate && ${workspaceFolder}/scripts/develop",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}